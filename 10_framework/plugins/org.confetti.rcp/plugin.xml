<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="openWizard" name="Open wizard" schema="schema/openWizard.exsd"/>
   <extension-point id="newWizard" name="New Wizard" schema="schema/newWizard.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.confetti.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Part3 Perspective"
            class="org.confetti.rcp.Perspective"
            id="org.eclipse.ui.tutorials.rcp.part3.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Message"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="org.confetti.rcp.views.View"
            id="org.eclipse.ui.tutorials.rcp.part3.view">
      </view>
      <view
            name="Mailboxes"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="org.confetti.rcp.views.NavigationView"
            id="org.eclipse.ui.tutorials.rcp.part3.navigationView">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.SubjectsView"
            icon="icons/sample.gif"
            id="org.confetti.rcp.subjectsView"
            name="Subjects"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.TeachersView"
            icon="icons/sample.gif"
            id="org.confetti.rcp.teachersView"
            name="Teachers"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.StudentGroupsView"
            icon="icons/sample.gif"
            id="org.confetti.rcp.studentGroupsView"
            name="StudentGroups"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.RoomsView"
            icon="icons/sample.gif"
            id="org.confetti.rcp.roomsView"
            name="Rooms"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.AssignmentsView"
            icon="icons/sample2.gif"
            id="org.confetti.rcp.assignmentsView"
            name="Assignments"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.ConstraintsView"
            icon="icons/sample3.gif"
            id="org.confetti.rcp.constraintsView"
            name="Constraints"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.confetti.rcp.views.TimeTableView"
            icon="icons/sample3.gif"
            id="org.confetti.rcp.timeTableView"
            name="TimeTable"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="org.eclipse.ui.tutorials.rcp.part3.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="org.eclipse.ui.tutorials.rcp.part3.category"
            id="org.eclipse.ui.tutorials.rcp.part3.open">
      </command>
      <command
            name="Open Message Dialog"
            description="Open a message dialog"
            categoryId="org.eclipse.ui.tutorials.rcp.part3.category"
            id="org.eclipse.ui.tutorials.rcp.part3.openMessage">
      </command>
      <command
            defaultHandler="org.confetti.rcp.commands.NewSubjectCommand"
            description="New Subject"
            id="org.confetti.rcp.commands.newSubjectCommand"
            name="New Subject">
      </command>
      <command
            defaultHandler="org.confetti.rcp.commands.NewTeacherCommand"
            description="New Teacher"
            id="org.confetti.rcp.commands.newTeacherCommand"
            name="New Teacher">
      </command>
      <command
            defaultHandler="org.confetti.rcp.commands.NewStudentGroupCommand"
            description="New Student Group"
            id="org.confetti.rcp.commands.newStudentGroupCommand"
            name="New Student Group">
      </command>
      <command
            defaultHandler="org.confetti.rcp.commands.NewRoomCommand"
            description="New Room"
            id="org.confetti.rcp.commands.newRoomCommand"
            name="New Room">
      </command>
      <command
            defaultHandler="org.confetti.rcp.commands.NewAssignmentCommand"
            description="New Assignment"
            id="org.confetti.rcp.commands.newAssignmentCommand"
            name="New Assignment">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.tutorials.rcp.part3.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+2">
      </key>
      <key
            commandId="org.eclipse.ui.tutorials.rcp.part3.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+3">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.confetti.rcp.application"
            name="Confetti">
         <property
               name="aboutImage"
               value="product_lg.gif"/>
         <property
               name="aboutText"
               value="RCP Tutorial 3&#x0A;Version 1.0.0&#x0A;by Ed Burnette&#x0A;&#x0A;For more information on Eclipse and the&#x0A;Rich Client Platform visit:&#x0A;http://www.eclipse.org&#x0A;&#x0A;Copyrights and other legal stuff goes here."/>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.confetti.rcp.subjectsView">
         <command
               commandId="org.confetti.rcp.commands.newSubjectCommand"
               icon="icons/sample2.gif"
               label="New Subject"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.confetti.rcp.teachersView">
         <command
               commandId="org.confetti.rcp.commands.newTeacherCommand"
               icon="icons/sample2.gif"
               label="New Teacher"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.confetti.rcp.studentGroupsView">
         <command
               commandId="org.confetti.rcp.commands.newStudentGroupCommand"
               icon="icons/sample2.gif"
               label="New Student Group"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.confetti.rcp.roomsView">
         <command
               commandId="org.confetti.rcp.commands.newRoomCommand"
               icon="icons/sample2.gif"
               label="New Room"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.confetti.rcp.assignmentsView">
         <command
               commandId="org.confetti.rcp.commands.newAssignmentCommand"
               icon="icons/sample2.gif"
               label="New Assignment"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
