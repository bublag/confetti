<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.confetti.rcp.newWizard">
      <newWizard
            factory="org.confetti.dataprovider.db.wizards.CreateDatabaseWizardFactory"
            name="Relational Database">
      </newWizard>
   </extension>
   <extension
         point="org.confetti.rcp.openWizard">
      <openWizard
            factory="org.confetti.dataprovider.db.wizards.OpenDatabaseWizardFactory"
            name="Relational Database">
      </openWizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.confetti.dataprovider.db.commands.PreferencesCommand"
            id="org.confetti.dataprovider.db.preferencesCommand"
            name="Preferences">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Database">
            <command
                  commandId="org.confetti.dataprovider.db.preferencesCommand"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
